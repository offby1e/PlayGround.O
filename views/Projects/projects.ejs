<main id="main" class="projects-page" style="padding: 8rem 0;">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Projects</h2>
            <p class="section-subtitle">A collection of web development, AI experiments, and creative coding projects.</p>
        </div>

        <!-- 프로젝트 추가 버튼 (관리자용/개발자용) -->
        <div style="text-align: right; margin-bottom: 2rem;">
            <a href="/projects/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Project
            </a>
        </div>

        <!-- 프로젝트 카드 그리드 -->
        <div class="services-grid">
            <% projects.forEach(project => { %>
                <a href="/projects/<%= project.id %>" class="service-card project-card-link">
                    <div class="service-icon">
                        <i class="<%= project.icon || 'fas fa-code' %>"></i>
                    </div>
                    <h3 class="service-title"><%= project.title %></h3>
                    <p class="service-description">
                        <%= project.excerpt %>
                    </p>
                    <div style="margin-top: 1rem; font-size: 0.9rem; color: rgba(255, 255, 255, 0.5);">
                        <span><%= project.category %></span> • <span><%= project.date %></span>
                    </div>
                </a>
            <% }); %>
        </div>

        <!-- 임시 프로젝트 없을 때 -->
        <% if (projects.length === 0) { %>
            <p style="text-align: center; color: rgba(255, 255, 255, 0.5); margin-top: 2rem;">
                No projects yet. <a href="/projects/new" style="color: #ff1d1d;">Add one</a>?
            </p>
        <% } %>
    </div>
</main>