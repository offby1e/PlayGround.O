<!-- views/partials/navbar.ejs -->
<nav class="nav">
  <a href="/" class="logo-nav">OB<span class="slash">/</span>E</a>
  <div class="hamburger">
    <span></span>
    <span></span>
    <span></span>
  </div>
  <ul class="nav-links">
    <% menu.forEach(item => { %>
      <% if (item.dropdown && item.dropdown.length > 0) { %>
      <li class="dropdown">
        <a href="<%= item.url %>" class="<%= item.active ? 'active' : '' %>"><%= item.title %></a>
        <div class="dropdown-content">
          <% item.dropdown.forEach(sub => { %>
            <a href="<%= sub.url %>"><%= sub.label %></a>
          <% }); %>
        </div>
      </li>
      <% } else { %>
      <li><a href="<%= item.url %>" class="<%= item.active ? 'active' : '' %>"><%= item.title %></a></li>
      <% } %>
    <% }); %>
  </ul>
</nav>