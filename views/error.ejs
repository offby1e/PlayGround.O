<!-- Error Section -->
<section class="error-section" style="padding: 8rem 0; min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center; background: #0a0a0a;">
    <div class="container">
        <!-- 에러 상태 코드 -->
        <h2 style="font-size: 6rem; font-weight: 700; color: #ff1d1d; margin: 0; letter-spacing: -2px;">
            <%= error.status || '500' %>
        </h2>

        <!-- 에러 메시지 -->
        <h1 style="font-size: 2.5rem; font-weight: 600; color: #ffffff; margin: 1rem 0 0.5rem; letter-spacing: -1px;">
            <%= message %>
        </h1>

        <p style="color: rgba(255, 255, 255, 0.6); font-size: 1.1rem; max-width: 600px; margin: 0 auto 2rem;">
            Something went wrong. We're sorry for the inconvenience.
        </p>

        <!-- 돌아가기 버튼 -->
        <div class="cta-group" style="display: flex; gap: 1rem; justify-content: center;">
            <a href="/" class="btn btn-primary">Go Home</a>
            <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
        </div>

        <!-- 스택 트레이스 (개발자 모드에서만 표시) -->
        <% if (error.stack) { %>
            <pre style="
                margin-top: 3rem;
                padding: 1.5rem;
                background: rgba(0, 0, 0, 0.3);
                border: 1px solid rgba(255, 29, 29, 0.2);
                border-radius: 12px;
                color: #f8f8f2;
                font-family: 'Fira Code', monospace;
                font-size: 0.9rem;
                line-height: 1.6;
                max-width: 90%;
                overflow-x: auto;
                text-align: left;
            ">
<%= error.stack %>
            </pre>
        <% } %>
    </div>
</section>